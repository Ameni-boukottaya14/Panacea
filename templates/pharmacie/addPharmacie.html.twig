{% extends 'back.html.twig' %}

{% block title %}Ajouter une pharmacie{% endblock %}

{% block body %}
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow" style="background-color: white;">
        <div class="card-body">
          <h1 class="card-title text-center text-success">Ajouter une pharmacie</h1>
          {{ form_start(form) }}
          <div class="mb-3">
            {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">{{ form_errors(form.nom) }}</div>
          </div>
          <div class="mb-3">
            {{ form_label(form.adress, 'Adresse', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.adress, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">{{ form_errors(form.adress) }}</div>
          </div>
          <div class="mb-3">
            {{ form_label(form.numTell, 'Numéro de téléphone', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.numTell, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">{{ form_errors(form.numTell) }}</div>
          </div>
          <div class="mb-3">
            {{ form_label(form.adressEmail, 'Adresse email', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.adressEmail, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">{{ form_errors(form.adressEmail) }}</div>
          </div>
          <button type="submit" class="btn btn-success w-100">Ajouter</button>
          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
