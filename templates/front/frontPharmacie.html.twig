{% extends 'base.html.twig' %}
{% block headerinner %}
<!-- Header Inner -->
<div class="header-inner">
    <div class="container">
        <div class="inner">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-12">
                    <!-- Start Logo -->
                    <div class="logo">
                        <a href="index.html"><img src="{{ asset('img/logo.png') }}" alt="#"></a>
                    </div>
                    <!-- End Logo -->
                    <!-- Mobile Nav -->
                    <div class="mobile-nav"></div>
                    <!-- End Mobile Nav -->
                </div>
                <div class="col-lg-9 col-md-9 col-12">
                    <!-- Main Menu and Buttons -->
                    <div class="row align-items-center">
                        <div class="col-lg-9 col-12">
                            <div class="main-menu">
                                <nav class="navigation">
                                    <ul class="nav menu">
                                        <li><a href="{{ path('front') }}">Accueil</a></li>
                                        <li><a href="#">Médecins</a></li>
                                        <li><a href="#">Hôpitaux</a></li>
                                        <li><a href="#">Laboratoires</a></li>
                                        <li class="active"><a href="{{ path('pharmacie_front') }}">Pharmacies</a></li>
                                    </ul>
                                </nav>
                            </div>
                            <!--/ Fin Menu principal -->
                        </div>
                        <div class="col-lg-1 col-6">
                            <div class="get-quote">
                                <a href="#" class="btn">Connexion</a>
                            </div>
                        </div>

                    </div>
                    <!-- End Main Menu and Buttons -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Table des pharmacies -->
<section class="pharmacy-table section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Nos pharmacies partenaires</h2>
                    <img src="{{ asset('img/section-img.png') }}" alt="#">
                    <p>Votre bien-être est notre priorité, voici nos pharmacies partenaires.</p>
                </div>
            </div>
        </div>
        <div class="row">
            {% for pharmacy in pharmacies %}
            <!-- Pharmacie Unique -->
            <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="pharmacy-card" style="border: 2px solid #5DADE2;margin-bottom: 20px;">
             <!-- En-tête de la pharmacie -->
<div class="card-header" style="background-color: #5DADE2; color: white; text-align: center;">
    <h4 class="title">{{ pharmacy.getNom() }}</h4>
</div>

                    <!-- Détails de la pharmacie -->
                    <div class="card-body">
                        <p class="attribute-label" style="font-size: 18px;"><strong>Adresse :</strong></p>
                        <p class="attribute-value" style="font-size: 16px;">{{ pharmacy.getAdress() }}</p>
                        <p class="attribute-label" style="font-size: 18px;"><strong>Téléphone :</strong></p>
                        <p class="attribute-value" style="font-size: 16px;">{{ pharmacy.getNumTell() }}</p>
                        <p class="attribute-label" style="font-size: 18px;"><strong>Email :</strong></p>
                        <p class="attribute-value" style="font-size: 16px;">{{ pharmacy.getAdressEmail() }}</p>
                    </div>
                </div>
            </div>
            <!-- Fin Pharmacie Unique -->
            {% endfor %}
        </div>
    </div>
</section>
<!-- Fin Table des pharmacies -->
{% block calltoaction %}	
		<!-- Start Call to action -->
		<section class="call-action overlay" data-stellar-background-ratio="0.5">
			<div class="container">
				<div class="row">
					<div class="col-lg-12 col-md-12 col-12">
						<div class="content">
							<h2>Voulez vous consulter vos ordonnace fournis par notre assurance.</h2>
<p>Veuillez cliquer sur "En savoir plus" pour accéder à votre historique d'ordonnances avec nos pharmacies partenaires.</p>
							<div class="button">
								
                                <a href="{{ path('ordonnance_front') }}" class="btn second">En savoir plus<i class="fa fa-long-arrow-right"></i></a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		<!--/ End Call to action -->
		{% endblock %}


<!-- End Header Inner -->


{% endblock %}
{% block continue %}

{% endblock %}

{% block dispositives %}
{% endblock %}

{% block newsletter %}
{% endblock %}

{% block Appointment %}
{% endblock %}
