<!-- Table des ordonnances -->

<section class="ordonnance-table section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Vos ordonnances</h2>
                    <img src="{{ asset('img/section-img.png') }}" alt="#">
                    <p>Votre bien-être est notre priorité, voici vos ordonnances.</p>
                </div>
            </div>
        </div>
        <div class="row">
            {% for ordonnance in ordonnances %}
            <!-- Ordonnance Unique -->
            <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="ordonnance-card" style="border: 2px solid #5DADE2;margin-bottom: 20px;">
                    <!-- En-tête de l'ordonnance -->
                    <div class="card-header" style="background-color: #5DADE2; color: white; text-align: center;">
                        <h4 class="title">{{ ordonnance.getNomMalade() ~ ' ' ~ ordonnance.getPrenomMalade() }}</h4>
                    </div>
                    <!-- Détails de l'ordonnance -->
                    <div class="card-body">
                        <p class="attribute-label" style="font-size: 18px;"><strong>Date :</strong></p>
                        <p class="attribute-value" style="font-size: 16px;">{{ ordonnance.getDate()|date('d/m/Y') }}</p>
                        <p class="attribute-label" style="font-size: 18px;"><strong>État :</strong></p>
                        <p class="attribute-value" style="font-size: 16px;">{{ ordonnance.getEtat() }}</p>
                        <p class="attribute-label" style="font-size: 18px;"><strong>Pharmacie :</strong></p>
                        <p class="attribute-value" style="font-size: 16px;">{{ ordonnance.getPharmacie().getNom() }}</p>
                        <p class="attribute-label" style="font-size: 18px;"><strong>Médicaments :</strong></p>
                        <p class="attribute-value" style="font-size: 16px;">{{ ordonnance.getMedicaments() }}</p>
                        <p class="attribute-label" style="font-size: 18px;"><strong>Médecin traitant :</strong></p>
                        <p class="attribute-value" style="font-size: 16px;">{{ ordonnance.getMedecinTraitant() }}</p>
                        <!-- Display the QR code for this ordonnance -->
                        <img src="{{ qrCodes[loop.index0] }}" alt="QR Code">
                    </div>
                </div>
            </div>
            <!-- Fin Ordonnance Unique -->
            {% endfor %}
        </div>
    </div>
</section>
<!-- Fin Table des ordonnances -->

