{% block continue %}
    <style>
        /* CSS styles here */
        html, body {
            height: 100%;
        }
        .testbox {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
            margin-top: 20px; /* Adjust margin as needed */
        }
        .form-signin {
            width: 450px; /* Adjust width as needed */
            padding: 10px;
            border-radius: 6px;
            background: #fff;
            box-shadow: 0 0 10px 0 #3498db;
        }
        .form-signin .h1 {
            color: #3498db; /* Change color to blue */
            text-align: center;
            margin-bottom: 20px; /* Adjust margin as needed */
        }
        .form-signin .form-group {
            margin-bottom: 15px;
        }
        .form-signin label {
            margin-bottom: 5px;
        }
        .form-signin input,
        .form-signin select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }
        .form-signin button {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            background: #3498db; /* Change color to blue */
            color: #fff;
            cursor: pointer;
        }
        .form-signin button:hover {
            background: #3498db; /* Darken color on hover */
        }
    </style>

    <div class="testbox">
        <form method="post" class="form-signin">
            {{ form_row(form._token) }} {# Add this line to include the CSRF token field #}
            <h1 class="h1">Register</h1>
            <div class="form-group">
                {{ form_label(form.nom, 'Nom') }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger">{{ form_errors(form.nom) }}</div>
            </div>
            <div class="form-group">
                {{ form_label(form.prenom, 'Prénom') }}
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger">{{ form_errors(form.prenom) }}</div>
            </div>
            <div class="form-group">
                {{ form_label(form.email, 'Email') }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger">{{ form_errors(form.email) }}</div>
            </div>
            <div class="form-group">
                {{ form_label(form.password.first, 'Mot de passe') }}
                {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger">{{ form_errors(form.password.first) }}</div>
            </div>
            <div class="form-group">
                {{ form_label(form.password.second, 'Confirmer mot de passe') }}
                {{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger">{{ form_errors(form.password.second) }}</div>
            </div>
            <div class="form-group">
                {{ form_label(form.telephone, 'Téléphone') }}
                {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger">{{ form_errors(form.telephone) }}</div>
            </div>
            <div class="form-group">
                {{ form_label(form.role, 'Role') }}
                {{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger">{{ form_errors(form.role) }}</div>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
{% endblock %}

