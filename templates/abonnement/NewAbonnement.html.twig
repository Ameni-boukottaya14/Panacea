{% extends 'back.html.twig' %}

{% block title %}Create New Abonnement{% endblock %}

{% block body %}
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow" style="background-color: white;">
        <div class="card-body">
          <h1 class="card-title text-center text-success">Create New Abonnement</h1>
          {{ form_start(form) }}
          <div class="mb-3">
            {{ form_label(form.User, 'User', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.User, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">{{ form_errors(form.User) }}</div>
          </div>
          <div class="mb-3">
            {{ form_label(form.Offre, 'Offre', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.Offre, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">{{ form_errors(form.Offre) }}</div>
          </div>
          <div class="mb-3">
            {{ form_label(form.DateC, 'Start Date', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.DateC, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">{{ form_errors(form.DateC) }}</div>
          </div>
          <div class="mb-3">
            {{ form_label(form.DateE, 'End Date', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.DateE, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">{{ form_errors(form.DateE) }}</div>
          </div>
          <button type="submit" class="btn btn-primary w-100">Create</button>
          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
