{% extends 'base.html.twig' %}

{% block title %}Panacea | Mes Consultations{% endblock %}

{% block nav %}
<div class="main-menu">
    <nav class="navigation">
        <ul class="nav menu">
            <li><a href="index.html">Accueil</a></li>
            <li class="active"><a href="{{ path('app_medecin_list') }}">Médecins</a></li>
            <li><a href="#">Hôpitaux</a></li>
            <li><a href="#">Laboratoires</a></li>
            <li><a href="#">Pharmacies</a></li>
        </ul>
    </nav>
</div>
{% endblock %}

{% block body %}

<section class="Feautes section">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<div class="section-title">
                            <div class="doctor-calendar-table my-2">
							<table class="pricing-table single-table">
        					    <thead>
            					    <tr>
                					    <th>Médecin</th>
                					    <th>Date</th>
                					    <th>Prix</th>
                                        <th>Actions</th>
            					    </tr>
        					    </thead>
        					    <tbody>
        					        {% for cons in consultations %}
            					        <tr>
                    					    <td>{{ cons.medecin.prenom }} {{ cons.medecin.nom }}</td>
                    					    <td>{{ cons.date|date('d/m/Y H:m')  }}</td>
                    					    <td>{{ cons.prix }} TND</td>
                    					    <td>
                    					    </td>
                					    </tr>
            					    {% else %}
                					    <tr>
                    					    <td colspan="6">no records found</td>
                					    </tr>
            					    {% endfor %}
            					</tbody>
        					</table>
                            </div>
						</div>
					</div>
				</div>
			</div>
		</section>
{% endblock %}
