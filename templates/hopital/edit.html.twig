{% extends 'base.html.twig' %}

{% block title %}Edit Hopital{% endblock %}

{% block body %}
    <div style="display: flex; align-items: center; justify-content: center; margin-top: 80px;">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Edit Hopital</h4>
                <p class="card-description"></p>
                {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
                <div class="form-group">
                    <label for="exampleInputUsername1">Nom</label>
                    {{ form_widget(form.Nom, {'attr': {'class': 'form-control custom-input'}}) }}
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">Localisation</label>
                    {{ form_widget(form.Localisation, {'attr': {'class': 'form-control custom-input'}}) }}
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">Images</label>
                    {{ form_widget(form.images, {'attr': {'class': 'form-control custom-input'}}) }}

                </div>
                <div class="form-group">
                    <button class="btn btn-primary mr-2">Update</button>
                    <a href="{{ path('app_hopital_index') }}" class="btn btn-info mt-2 text-white">Back</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

